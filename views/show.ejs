<% include partials/header %>

<div class="container">
      <div class="row">
          <div class="col-md-3">
                <p class="lead">
                     YelpCamp
                </p>
                <div class="list-group">
                    <li class="list-group-item active"> info 1</li>
                    <li class="list-group-item "> info 2</li>
                    <li class="list-group-item "> info 3</li>

                </div>
            </div>
          
           <div class="col-md-9">
                <div class="thumbnail">
                        <img class="img-responsive" src="<%=camp.image%>" >
                        
                        <div class="caption-full">
                            <h4 class="pull-right"> $<%=camp.price%>/night</h4>
                            <h3> <a> <%=camp.name%> </a> </h3>
                            <p> <%=camp.description%></p>
                            <p>Submitted by <em><%= camp.author.username %></em></p>
                            
                            <% if (camp.author.id && currentUser && camp.author.id.equals(currentUser._id)) {%>
                                <a class="btn btn-warning" href="/campgrounds/<%=camp._id%>/edit"> 
                                Edit Campground
                                </a>
                                <form class="delete-form" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete Campground</button>
                                </form>
                            
                            <% } %>
                        </div>
                        
                </div>
                <div class="well">
                     <div>
                        <p>
                            <a class="btn btn-success" href="/campgrounds/<%=camp._id%>/comment/new"> Add your comment</a>
                        </p>
                        </div>
                        <hr>
                        <!--comments-->
                        <% camp.comments.forEach(function (comment) { %>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong> <%=comment.author.username %></strong>
                                    <span class="pull-right"> 10 days ago</span>
                                    <p> <%=comment.text %> </p>
                                    <% if (comment.author.id && currentUser && comment.author.id.equals(currentUser._id)) { %>
                                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%=camp._id%>/comment/<%=comment._id%>/edit"> 
                                            Edit
                                        </a>
                                        <form class="delete-form" action="/campgrounds/<%=camp._id%>/comment/<%=comment._id%>?_method=DELETE" method="POST">
                                            <button class="btn btn-xs btn-danger">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                                
                            </div>
                        <% }) %>
                      
                </div>
                
           </div>
  
      </div>
 <div>
                    <p> P.S. this is the show.ejs file</p> 
</div>
<% include partials/footer %>
