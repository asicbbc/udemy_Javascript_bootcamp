<% include partials/header %> 

<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Add A New Campground </h1>
        <div style="width:30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="campground name"    name="campName">
            </div>
            <div class="form-group">

                <input class="form-control" type="text" placeholder="campground image url" name="campUrl">
            </div>
            <div class="form-group">

                <input class="form-control" type="text" placeholder="campground description" name="campDescription">
            </div>
            <div class="form-group">

                <input class="form-control" type="number" placeholder="campground price" min="0.99" step="0.01" name="campPrice">
            </div>
            <div class="form-group">

                <button class="btn btn-lg btn-defaults btn-block btn-primary">Submit</button>
            </div>
            <a  href=/campgrounds> View All Campgrounds</a>

        </form>
        </div>
    </div>
    
    <p> P.S. this is the newCampGroundForm.ejs file</p>
</div>

<% include partials/footer %>
