<% include partials/header %> 

<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Edit <%=camp.name%> </h1>
        <div style="width:30%; margin: 30px auto;">
            
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" > 
            
            <div class="form-group">
                <input class="form-control" type="text" value="<%=camp.name%>"    
                        name="campGround[name]">
            </div>
            <div class="form-group">

                <input class="form-control" type="text"   value="<%=camp.image%>"    
                        name="campGround[image]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"  value="<%=camp.description%>"    
                        name="campGround[description]">
            </div>
            <div class="form-group">

                <input class="form-control" type="number" value="<%=camp.price%>" min="0.99" step="0.01" 
                        name="campGround[price]">
            </div>
            <div class="form-group">

                <button class="btn btn-lg btn-defaults btn-block btn-primary">Update</button>
            </div>
            <!--<a  href=/campgrounds> View All Campgrounds</a>-->

        </form>
        </div>
    </div>
    
    <p> P.S. this is the campground_edit.ejs file</p>
</div>

<% include partials/footer %>
